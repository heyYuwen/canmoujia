@import "../../../wxParse/wxParse.wxss";
.headertop{
  width: 100%;
  height: 390rpx;

}
.headerimg{
  width: 100%;
  position: relative
}
.companyimg{
  width: 100%;
  height: auto;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 100;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold
}
.companyimg image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: block;
  margin: auto;
  margin-top: 50rpx;
  margin-bottom: 30rpx
}
.centerbox{
  width: 710rpx;
  height: auto;
  margin: auto;
  color: #53565f;
}
.title{
  font-size: 32rpx;
  color: #53565f
}
.title .sbar{
  width:10rpx;
  height: 40rpx;
  background: #03B4AA;
  margin-right: 20rpx
}
.message{
  box-sizing: border-box;
  padding: 20rpx;
  text-indent: 20rpx;
  font-size: 30rpx;
  color: #53565f;
  line-height: 44rpx
}
.boldtitle{
  text-indent: 30rpx;
  font-size: 34rpx;
  margin-bottom: 22rpx;
  font-weight: 590
}
.infomation{
  font-size: 28rpx;
  text-indent: 30rpx;
  margin-bottom: 30rpx
}
.applybtn{
  background: #47D485;
  width: 640rpx;
  height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #fff;
  margin: auto;
  margin-bottom: 40rpx
}
.applybtn2{
  background: #cdcccc;

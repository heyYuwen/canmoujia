image{
  width: 100%;
  position: relative
}
.center{
  width: 100%;
  height: 700rpx;
  position: absolute;
  top: 150rpx;
  left: 0rpx
}
input{
  width: 580rpx;
  height: 80rpx;
  margin: auto;
  /* background: rgba(51,51,51, 0.8); */
  background: rgb(65, 63, 64);
  opacity: 0.6;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #fff
}
.placeholder{
  font-size: 28rpx;
  color: #E7E6E7
}
.btn{
  width: 640rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #47d485;
  margin: auto;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
  font-size: 28rpx;
  margin-top: 60rpx;
}
.cover{
  width: 100%;
  height: 100%;
  background: rgba(20,20,20, 0.5);

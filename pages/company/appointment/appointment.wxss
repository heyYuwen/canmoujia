  top: 0rpx;
  left: 0rpx
}
.coverstatus{
  width: 670rpx;
  height: 320rpx;
  background: rgba(206,206,211, 0.8);
  margin: auto;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding-top: 8rpx;
  margin-top: 300rpx;
}
.box-string{
  width: 654rpx;
  height: 304rpx;
  background: #fff;
  margin:0rpx 8rpx;
  border-radius: 20rpx
}
.windowtitle{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #888992;
